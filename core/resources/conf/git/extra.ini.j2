[init]
  defaultBranch = master
[user]
  name = {{ tpl_vars.git_user_name | default('Foo Bar') }}
  email = {{ tpl_vars.git_user_email | default('foo.bar@baz.com') }}
[alias]
  co = commit
  ch = checkout
  rb = rebase
  ls = log --oneline -10
  ll = log --oneline
  lg = log --oneline --graph --decorate --abbrev-commit
  stat = status -u
  dif = diff --color-words
[push]
  default = simple
[pull]
  ff = only
[core]
  editor = vim
  # editor = mcedit
[diff]
  tool = vimdiff
  # tool = mcdiff
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
[difftool "vimdiff"]
  cmd = vimdiff $LOCAL $REMOTE
[difftool "mcdiff"]
  cmd = mcdiff $LOCAL $REMOTE
